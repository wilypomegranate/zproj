#compdef project_goto

# I really don't like the trailing slash with this completion
# _path_files -/ -W "${ZPROJ_ROOT_DIR}"
# if [ -z ${ZPROJ_ROOT_DIR} ]
# then
local dirs=$(find ${ZPROJ_ROOT_DIR} -maxdepth ${ZPROJ_MAX_DEPTH} -type d -and -name '.git' -or -name '.zproj' 2> /dev/null | xargs dirname | sed "s,${ZPROJ_ROOT_DIR},," | sed 's,^/,,')
local projects=("${(@f)${dirs}}")
_values ${projects}
# fi
